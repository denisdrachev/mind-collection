{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "title": "The root schema",
  "description": "The root schema comprises the entire JSON document.",
  "default": {},
  "examples": [
    {
      "login": "login",
      "password": "password",
      "fname": "first name",
      "lname": "last name",
      "email": "email@gmail.com",
      "location": {
        "x": 5,
        "y": 10
      }
    }
  ],
  "required": [
    "login",
    "password",
    "fname",
    "lname",
    "email"
  ],
  "additionalProperties": true,
  "properties": {
    "login": {
      "$id": "#/properties/login",
      "type": "string",
      "title": "The login schema",
      "description": "An explanation about the purpose of this instance.",
      "default": "",
      "minLength": 1,
      "examples": [
        "login"
      ]
    },
    "password": {
      "$id": "#/properties/password",
      "type": "string",
      "title": "The password schema",
      "description": "An explanation about the purpose of this instance.",
      "default": "",
      "minLength": 1,
      "examples": [
        "password"
      ]
    },
    "fname": {
      "$id": "#/properties/fname",
      "type": "string",
      "title": "The fname schema",
      "description": "An explanation about the purpose of this instance.",
      "default": "",
      "minLength": 1,
      "examples": [
        "first name"
      ]
    },
    "lname": {
      "$id": "#/properties/lname",
      "type": "string",
      "title": "The lname schema",
      "description": "An explanation about the purpose of this instance.",
      "default": "",
      "minLength": 1,
      "examples": [
        "last name"
      ]
    },
    "email": {
      "$id": "#/properties/email",
      "type": "string",
      "title": "The email schema",
      "description": "An explanation about the purpose of this instance.",
      "default": "",
      "pattern": "^([a-zA-Z0-9_\\-\\.]+)@([a-zA-Z0-9_\\-\\.]+)\\.([a-zA-Z]{2,5})$",
      "minLength": 1,
      "examples": [
        "email@gmail.com"
      ]
    },
    "location": {
      "$id": "#/properties/location",
      "type": "object",
      "title": "The location schema",
      "description": "An explanation about the purpose of this instance.",
      "default": {},
      "examples": [
        {
          "x": 5,
          "y": 10
        }
      ],
      "required": [
        "x",
        "y"
      ],
      "additionalProperties": true,
      "properties": {
        "x": {
          "$id": "#/properties/location/properties/x",
          "type": "integer",
          "title": "The x schema",
          "description": "An explanation about the purpose of this instance.",
          "default": 0,
          "examples": [
            5
          ]
        },
        "y": {
          "$id": "#/properties/location/properties/y",
          "type": "integer",
          "title": "The y schema",
          "description": "An explanation about the purpose of this instance.",
          "default": 0,
          "examples": [
            10
          ]
        }
      }
    }
  }
}